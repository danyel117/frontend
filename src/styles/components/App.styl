body
  background-color: white
  display: flex
  justify-content: center
  align-items: flex-start

i
  color:black

a
  color:inherit
  text-decoration: none

a:visited
  color:inherit
  text-decoration: none

h4
  margin-left: 5px
  margin-right: 5px
  margin-top:2px
  margin-bottom:2px

h5
  margin-left: 10px
  margin-right: 10px
  margin-top:2px
  margin-bottom:2px

.header
  padding:15px
  border-radius: 8px
  background-color: #a3a3a3

.about
  display: flex

.about--personal_image
  height: 150px
  width: 150px
  border-radius: 100%
  border: 4px solid #38fcc8

.about--personal_info
  margin-left: 20px

.about--personal_info-Header-title
  color: white
  padding: 5px
  margin-bottom: 5px
  border-bottom: 1px solid #38fcc8

.about--personal_info-Header-job-title
  color:#3b3b3b
  margin-top: 10px
  margin-bottom:20px

.about--personal_info-additional_data
  font-style: italic
  color:#3b3b3b
  display: flex
  flex-wrap: wrap

.about--personal_info-additional_data-Header-item
  display: flex
  justify-content: center
  align-items: center